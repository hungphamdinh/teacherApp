<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".CourseActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textFontWeight="bold"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtTitleTutorDetail"
            android:textColor="#fff"
            android:text="CourseList"
            />
    </LinearLayout>
    <ScrollView
        android:layout_weight="8"
        android:layout_height="0dp"
        android:layout_width="match_parent">
    <LinearLayout
         android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Thông tin người học"
        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="end"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgProfile"
                        android:layout_width="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="50dp"
                        android:src="@drawable/profile"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/fbutton_color_emerald"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgStatus"
                        android:layout_gravity="end|right|bottom"
                        android:layout_width="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/imgProfile"
                        android:layout_height="15dp"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="10dp"
                        app:civ_border_color="#05df29"
                        android:layout_toRightOf="@id/imgProfile"
                        android:layout_toEndOf="@id/imgProfile"
                        />
                </FrameLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtUserNameTutor"
                        android:textStyle="bold"
                        android:text="UserName"
                        android:layout_marginTop="6dp"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCountryTutor"
                        android:textStyle="italic"
                        android:text="4543534"
                        android:textColor="#000"
                        android:layout_marginTop="6dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtEmailTutor"
                        android:textStyle="italic"
                        android:text="Address"
                        android:textColor="#000"
                        android:layout_marginTop="6dp"

                        />

                </LinearLayout>

            </LinearLayout>
            <Button android:layout_height="wrap_content" android:id="@+id/btnCallTutor" android:layout_width="200dp" android:layout_marginVertical="10dp" android:layout_gravity="center" android:background="#01b0a9" android:textSize="25dp" android:textColor="#fff" android:hint="Liên lạc" android:textAlignment="center"/>
            <Button android:layout_height="wrap_content" android:id="@+id/btnMessage" android:layout_width="200dp" android:layout_marginVertical="10dp" android:layout_gravity="center" android:background="#01b0a9" android:textSize="25dp" android:textColor="#fff" android:hint="Nhắn tin" android:textAlignment="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="#000"
                android:text="Tài liệu học"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/doc"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCourseDocDetail"
                    android:textStyle="italic"
                    android:text="4543534"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:background="#fff"
                    />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>